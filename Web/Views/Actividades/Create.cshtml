@{
    //Layout = "_LayoutCrud";
    ViewData["Vista"] = "Create";
}

<link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />

@*action="@Url.Action("Login", "Login")" method="post" autocomplete="off"*@

<div class="formCrud">
    <h2>
        NUEVA ACTIVIDAD***

    </h2>

    <div class="row">
        <div class="col">
            <form asp-action="Create">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div class="form-group">
                    <label @*asp-for="Name" *@class="control-label">Nombre(s) : *</label>
                    <input type="text" aria-label="Nombre" @*asp-for="Name"*@ class="form-control">
                    <span @*asp-validation-for="Name"*@ class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Fecha de Inicio : *</label>
                    <input type="date" aria-label="fecIni" id="fecIni" class="form-control" required>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha de Fin : *</label>
                    <input type="date" aria-label="Fechafin" id="id="fecfin"class="form-control" required>
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Lugar: *</label>
                    <input type="text" aria-label="lugar" class="form-control" required>
                    <span class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label class="control-label">Encargado(s) : *</label>
                    <input type="text" aria-label="encargado" class="form-control" required>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Participantes : *</label>
                 
                        <input type="text" aria-label="participantes" class="form-control" required>
                        <span onclick="location.href='@Url.Action("Participantes", "Actividades")'" class="material-symbols-outlined">add_circle</span>
                    
                    
                </div>

                <br />
                <br />
                @*<input type="submit" value="Guardar" class="btn btn-primary" />*@
                <button type="submit" class="btnGuardar" value="guardar">Guardar</button>
            </form>

        </div>

    </div>
</div>
<br />
<br />
<div class="botones">

    <button type="submit" class="btnCancelar" value="cancelar" onclick="location.href='@Url.Action("Details", "Actividades")'">Cancelar</button>
</div>
