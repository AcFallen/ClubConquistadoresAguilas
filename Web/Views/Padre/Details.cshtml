@{
    //Layout = "_LayoutCrud";
    ViewData["Vista"] = "Details";
}

<link rel="stylesheet" href="~/css/CrudOrganizacion.css" asp-append-version="true"/>

@*action="@Url.Action("Login", "Login")" method="post" autocomplete="off"*@

<div class="recent-order">
    <h2>
        Lista de Apoderados ***
        <button type="submit" class="btnCreate" onclick="location.href='@Url.Action("Create", "Padre")'">Ingresar</button>

    </h2>

    <table class="table table-hover">
        <thead>
        <tr name="columna">
            <th scope="col" name="nro">Item</th>
            <th class="dni" name="colDni">DNI</th>
            <th class="nombre" name="colNombre">Nombre</th>
            <th class="apellido" name="colApellidoPat">Apellido Paterno</th>
            <th class="apellido" name="colApellidoMat">Apellido Materno</th>
            <th class="telefono" name="colTelefono">Telefono</th>

        </tr>
        </thead>
        <tbody>
        <tr name="fila">
            <th scope="row" name="nro">1</th>
            <td class="dni" name="rowDni">12345678</td>
            <td class="nombre" name="rowNombre">Mark</td>
            <td class="apellido" name="rowApellidoPat">Otto</td>
            <td class="apellido" name="rowApellidoMat">Otto</td>
            <td class="telefono" name="rowTelefono">44444</td>
            <td>
                <button type="button" id="delete" class="btn btn-default" onclick="location.href='@Url.Action("Delete", "Padre")'">
                    <span class="material-symbols-outlined">delete</span>
                </button>
                <button type="button" id="edit" class="btn btn-default" onclick="location.href='@Url.Action("Edit", "Padre")'">
                    <span class="material-symbols-outlined">edit_square</span>
                </button>


            </td>
        </tr>

        </tbody>
    </table>


</div>