<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Web</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true"/>
    @*iconos boxicons*@
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
<header>
@* barra lateral*@
        <section id="sidebar">
            
                    @*logo/marca enlace debe botar a la pagina de inicio*@
                     <a href="#" class="brand">
                            <img src="~/img/logo.png" alt="" width="30" height="24" class="d-inline-block align-text-top" />
                            <span class="text">Club Las Aguilas</span>      
                    </a>
                
                
            <ul class="side-menu top">
                <li class="active">
                    <a href="#">
                            <i class='bx bxs-dashboard'></i>
                            <span class="text">Dashboard</span>
                    </a>
                </li>
                 <li>
                        <div class="iocn-link">
                            <a href="#">
                                <i class='bx bxs-institution'></i>
                                <span class="text">Organización</span>
                            </a>
                            <i class='bx bxs-down-arrow'></i>
                        </div>
                        <ul class="sub-menu">
                            <li>
                                <a class="link_name" href="#">
                                    <i class='bx bxs-circle'></i>
                                    <span class="text">Conquistador</span>
                                </a>
                                <a href="#">
                                    <i class='bx bxs-circle'></i>
                                    <span class="text">Consejero</span>
                                </a>
                                <a href="#">
                                    <i class='bx bxs-circle'></i>
                                    <span class="text">Instructor</span>
                                </a>
                            </li>
                        </ul>
                        
                 </li>
                 <li>
                        <a href="#">
                            <i class='bx bx-current-location'></i>
                            <span class="text">Actividades</span>
                        </a>
                 </li>
                 <li>
                        <a href="#">
                            <i class='bx bxs-message-dots'></i>
                            <span class="text">Notificar Reunión</span>
                        </a>
                 </li>


                </ul>
        </section>
  @* barra lateral*@
        <section id="content">
                <nav>
                    <p class="textUsuario">Hola David !</p>
                    
                        <a href="#" class="notification">
                            <i class='bx bxs-bell'></i>
                            <span class="num">8</span>
                        </a>

                        <a href="#" class="profile">
                            <img src="~/icono/usuario (verde).png" />
                        </a>
                    
                    
                </nav>
        </section>

</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<footer>

</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>