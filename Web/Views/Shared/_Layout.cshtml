<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Web</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true"/>
    @*iconos boxicons*@
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
<header>
    <nav >
@* barra lateral*@
        <section id="sidebar">
      
                @*logo/marca enlace debe botar a la pagina de inicio*@
            <a href="#" class="brand">
                    <i class='bx bx-wink-smile'></i>
                    <span class="text">Director</span>
            </a>
            <ul class="side-menu top">
                <li>
                    <a href="#">
                            <i class='bx bxs-dashboard'></i>
                            <span class="text">Dashboard</span>
                    </a>
                </li>
                    <li>
                        <a href="#">
                            <i class='bx bx-sitemap'></i>
                            <span class="text">Organización</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class='bx bx-trip'></i>
                            <span class="text">Actividades</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class='bx bxs-message-dots'></i>
                            <span class="text">Notificar Reunión</span>
                        </a>
                    </li>

                    
            </ul>
        </section>
  @* barra lateral*@
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>