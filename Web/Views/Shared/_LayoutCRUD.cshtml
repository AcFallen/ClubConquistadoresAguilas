<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <title>@ViewData["Vista"] - Web</title>
    <link rel="stylesheet" href="~/css/EstilosCrud.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

</head>
<body>
    <div class="container">
        <aside>
           
            <div class="top">
                <div class="logo">
                    <img src="/img/logo.png" />
                    <h2>Las<span class="danger">Agui</span>las</h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-outlined">close</span>
                </div>
            </div>
            @*<a asp-area="" asp-controller="Home" asp-action="DirectorInstructor">*@
            <div class="sidebar" >
                <a class="active" asp-area="" asp-controller="Crud" asp-action="Inicio">
                    <span class="material-symbols-outlined">dashboard</span>
                    <h3>Inicio</h3>
                </a>
                <div class="categorias">
                    <ul>

                        <li>
                            <a>
                                <span class="material-symbols-outlined">tenancy</span>
                                <h3>Organización</h3>
                            </a>

                            <ul>
                                <li>
                                    <a asp-area="" asp-controller="Crud" asp-action="CrudConquistador">
                                        <span class="material-symbols-outlined"> child_care</span>
                                        <h3>Conquistador</h3>
                                    </a>
                                
                                
                                    <a asp-area="" asp-controller="Crud" asp-action="CrudConsejero">
                                        <span class="material-symbols-outlined">diversity_3</span>
                                        <h3>Coordinador</h3>
                                    </a>
                                
                                
                                    <a asp-area="" asp-controller="Crud" asp-action="CrudInstructor">
                                        <span class="material-symbols-outlined">sports_kabaddi</span>
                                        <h3>Instructor</h3>
                                    </a>
                                </li>

                            </ul>
                        </li>

                    </ul>
                
                </div>
               
                
                <a asp-area="" asp-controller="Crud" asp-action="Actividades">
                    <span class="material-symbols-outlined">nature_people</span>
                    <h3>Actividades</h3>
                </a>
                <a href="#">
                    <span class="material-symbols-outlined">forum</span>
                    <h3>Notificar</h3>
                    <span class="message-count">26</span>
                </a>
                <a href="#">
                    <span class="material-symbols-outlined">monetization_on</span>
                    <h3>Inscripciones</h3>
                </a>
                <a href="#">
                    <span class="material-symbols-outlined">savings</span>
                    <h3>Ahorro</h3>
                </a>
                <a href="#">
                    <span class="material-symbols-outlined">contract_edit</span>
                    <h3>Tomar Lista</h3>
                </a>
                <a href="#">
                    <span class="material-symbols-outlined">school</span>
                    <h3>Asignar Clase</h3>
                </a>
                
                <a href="#">
                    <span class="material-symbols-outlined">logout</span>
                    <h3>Cerrar Sesión</h3>
                </a>
            </div>
        </aside>


    <!--fin de aside-->
    <main>
            @RenderBody()
    </main> 
    
    <div class="right">
        <div class="top">
            <button id="menu-btn">
                    <span class="material-symbols-outlined">menu</span>
            </button>
            <div class="theme-toggler">
                    <span class="material-symbols-outlined active">light_mode</span>
                    <span class="material-symbols-outlined">dark_mode</span>
            </div>
            <div class="profile">
                <div class="info">
                    <p>Soy, <b name="fullnameUsuario">Pedro Perez</b></p>
                        <small class="text-muted"><b name="RolUsuario">Director</b></small>
                </div>
                <div class="profile-photo">
                    <img src="./img/fotoPerfil.png"/>
                </div>
            </div>
        </div>

    </div>
    </div>
</body>
</html>
