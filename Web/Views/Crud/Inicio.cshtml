
@{
    Layout = "_LayoutCrud";
}

<link rel="stylesheet" href="~/css/CrudOrganizacion.css" asp-append-version="true" />

@*action="@Url.Action("Login", "Login")" method="post" autocomplete="off"*@

<h1>Hola, Pedro! 
    <span class="material-symbols-outlined">waving_hand</span>
</h1>

<div class="recent-order">
    <h2>Lista de Conquistadores ***    
        <button type="button" class="btn btn-outline-secondary">Nuevo</button>
    </h2>
    
    <table class="table table-hover">
        <thead>
            <tr name="columna">
                <th scope="col" name="nro">Numero</th>
                <th class="nombre" name="colNombre">Nombre</th>
                <th class="apellido" name="colApellido">Apellidos</th>
                <th class="cargo" name="colCargo">Cargo</th>
                <th class="clase" name="colClase">Clase</th>
                <th class="unidad" name="colUnidad">Unidad</th>
            </tr>
        </thead>
        <tbody>
            <tr name="fila">
                <th scope="row" name="nro">1</th>
                <td class="nombre" name="rowNombre">Mark</td>
                <td class="apellido" name="rowApellido">Otto</td>
                <td class="cargo" name="rowCargo">Conquistador</td>
                <td class="clase" name="rowClase">clase1</td>
                <td class="unidad" name="rowUnidad">unidad1</td>
                <td>
                    <button type="button" id="delete" class="btn btn-default">
                        <span class="material-symbols-outlined">delete</span>
                    </button>
                    <button type="button" id="edit" class="btn btn-default">
                        <span class="material-symbols-outlined">edit_square</span>
                    </button>
                    
                </td>
            </tr>
            
        </tbody>
    </table>
</div>
