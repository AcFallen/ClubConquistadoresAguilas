@model VmPerson

@{
    //Layout = "_LayoutCrud";
    ViewData["Vista"] = "Details";
}

<link rel="stylesheet" href="~/css/CrudOrganizacion.css" asp-append-version="true"/>

@*action="@Url.Action("Login", "Login")" method="post" autocomplete="off"*@

<div class="recent-order">
    <h2>
        Conquistadores ***
        <button type="submit" class="btnCreate" onclick="location.href='@Url.Action("Create", "Conquistador")'">Nuevo</button>

    </h2>

    <table class="table table-hover">
        <thead>
        <tr name="columna">
            <th scope="col" name="nro">Numero</th>
            <th class="nombre" name="colNombre">Nombre</th>
            <th class="apellido" name="colApellido">Apellidos</th>
            <th class="clase" name="colClase">Clase</th>
            <th class="unidad" name="colUnidad">Unidad</th>
            <th class="cargo" name="colCargo">Cargo</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.PersonList)
        {
            <tr name="fila">
                <th scope="row" name="nro">@item.Id</th>
                <td class="nombre" name="rowNombre">@item.FirstName</td>
                <td class="apellido" name="rowApellido">@item.FullSurname</td>
                <td class="clase" name="rowClase">@item.Class</td>
                <td class="unidad" name="rowUnidad">@item.Unit</td>
                <td class="cargo" name="rowCargo">@item.Position</td>
                <td>
                    <button type="button" id="delete" class="btn btn-default" onclick="location.href='@Url.Action("Delete", "Conquistador")'">
                        <span class="material-symbols-outlined">delete</span>
                    </button>
                    <button type="button" id="edit" class="btn btn-default" onclick="location.href='@Url.Action("Edit", "Conquistador")'">
                        <span class="material-symbols-outlined">edit_square</span>
                    </button>


                </td>
            </tr>
        }

        </tbody>
    </table>


</div>